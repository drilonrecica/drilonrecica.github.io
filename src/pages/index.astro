---
import Layout from '../layouts/Layout.astro';
import { Navbar } from '../components/Navbar';
import { Reveal } from '../components/motion/Reveal';
import { Stagger } from '../components/motion/Stagger';
---

<Layout title="Drilon Recica | Developer">
	<Navbar client:load />
	
	<main class="flex flex-col">
		
		<!-- Hero Section -->
		<section id="hero" class="min-h-screen flex items-center justify-center relative overflow-hidden pt-16">
			{/* Scan line & scanning grid background */}
			<div class="absolute inset-0 bg-grid z-0"></div>
			<div class="absolute inset-0 z-0 pointer-events-none">
				<div class="h-[20vh] w-full bg-gradient-to-b from-blue-500/10 to-transparent scan-line absolute top-0 blur-3xl"></div>
			</div>

			<div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
				<Stagger client:load>
					<div class="glass-card inline-block px-4 py-1.5 rounded-full border border-blue-500/20 bg-blue-500/5 mb-8">
						<span class="text-blue-400 text-sm font-medium tracking-wide font-mono">AVAILABLE FOR HIRE</span>
					</div>

					<h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight leading-tight">
						Drilon <span class="gradient-accent">Reçica</span>
					</h1>
					
					<div class="text-xl md:text-2xl text-slate-200 mb-6 font-medium">
						Senior Android Developer · Flutter Engineer · Mobile Architecture
					</div>

					<p class="text-lg text-slate-400 mb-10 leading-relaxed max-w-2xl mx-auto">
						Specializing in robust Android-first solutions and cross-platform modernization. 
						I build scalable mobile architectures that stand the test of time.
					</p>

					<div class="flex flex-col sm:flex-row justify-center gap-4">
						<a 
							href="/Drilon_Recica_CV.pdf" 
							class="px-8 py-4 bg-blue-600 hover:bg-blue-500 text-white rounded-xl font-bold transition-all hover:scale-105 shadow-lg shadow-blue-500/25 flex items-center justify-center gap-2"
						>
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
							Download CV
						</a>
						<a 
							href="https://github.com/drilonrecica" 
							target="_blank"
							rel="noopener noreferrer"
							class="px-8 py-4 glass-card hover:bg-white/10 text-white rounded-xl font-bold transition-all hover:scale-105 flex items-center justify-center gap-2"
						>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path></svg>
							GitHub
						</a>
						<a 
							href="#connect" 
							class="px-8 py-4 glass-card hover:bg-white/10 text-white rounded-xl font-bold transition-all hover:scale-105 flex items-center justify-center gap-2"
						>
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
							Contact
						</a>
					</div>
				</Stagger>
			</div>
		</section>

		<!-- Credibility Bar -->
		<section id="credibility" class="py-10 border-y border-white/5 bg-white/[0.02]">
			<div class="container mx-auto px-4 max-w-7xl">
				<Stagger client:visible>
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
						
						{/* Item 1 */}
						<div class="flex items-start gap-4 p-4 rounded-2xl hover:bg-white/5 transition-colors">
							<div class="p-3 rounded-lg bg-blue-500/10 text-blue-400">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>
							</div>
							<div>
								<h3 class="font-bold text-slate-100">Android since 2012</h3>
								<p class="text-sm text-slate-400">10k+ downloads on Play Store</p>
							</div>
						</div>

						{/* Item 2 */}
						<div class="flex items-start gap-4 p-4 rounded-2xl hover:bg-white/5 transition-colors">
							<div class="p-3 rounded-lg bg-cyan-500/10 text-cyan-400">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg>
							</div>
							<div>
								<h3 class="font-bold text-slate-100">Legacy → Modern</h3>
								<p class="text-sm text-slate-400">MVP/RxJava to MVVM/Flow</p>
							</div>
						</div>

						{/* Item 3 */}
						<div class="flex items-start gap-4 p-4 rounded-2xl hover:bg-white/5 transition-colors">
							<div class="p-3 rounded-lg bg-purple-500/10 text-purple-400">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14c1.49-1.08 2-3.65 2-5 0-2.65-2.35-4.57-5-5-3.43-.56-7 4-7 4s-1.43-3.15-4-1C2.35 9.07 4.09 11.45 6 13c1.69 1.37-1 4-1 4H19v-3z"></path></svg>
							</div>
							<div>
								<h3 class="font-bold text-slate-100">Accessibility-led</h3>
								<p class="text-sm text-slate-400">Complete UI rework (DB)</p>
							</div>
						</div>

						{/* Item 4 */}
						<div class="flex items-start gap-4 p-4 rounded-2xl hover:bg-white/5 transition-colors">
							<div class="p-3 rounded-lg bg-pink-500/10 text-pink-400">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
							</div>
							<div>
								<h3 class="font-bold text-slate-100">Tech Lead</h3>
								<p class="text-sm text-slate-400">End-to-end product (Qisara)</p>
							</div>
						</div>

					</div>
				</Stagger>
			</div>
		</section>

		<!-- Experience Highlights -->
		<section id="experience" class="py-24">
			<div class="container mx-auto px-4 max-w-5xl">
				<Reveal client:visible>
					<h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Experience Highlights</h2>
				</Reveal>
				<Stagger client:visible>
					<div class="space-y-8">
						{/* Placeholder Experience Cards */}
						{[1, 2, 3].map((item) => (
							<div class="glass-card p-6 md:p-8 hover:bg-white/5 transition-colors group">
								<div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
									<h3 class="text-xl font-bold text-white group-hover:text-blue-400 transition-colors">Senior Engineer @ Tech Corp</h3>
									<span class="text-slate-400 font-mono text-sm">2023 - Present</span>
								</div>
								<p class="text-slate-300">
									Leading development of high-scale distributed systems and mentoring junior developers.
								</p>
							</div>
						))}
					</div>
				</Stagger>
			</div>
		</section>

		<!-- Expertise -->
		<section id="expertise" class="py-24 bg-slate-900/30">
			<div class="container mx-auto px-4 max-w-6xl">
				<Reveal client:visible>
					<h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Expertise</h2>
				</Reveal>
				<Stagger client:visible>
					<div class="grid grid-cols-2 md:grid-cols-4 gap-6">
						{[
							'Backend Systems', 'Cloud Architecture', 'Frontend Dev', 'DevOps',
							'Database Design', 'API Security', 'Performance', 'AI Integration'
						].map((skill) => (
							<div class="glass-card p-6 text-center hover:scale-105 transition-transform duration-300">
								<span class="text-cyan-400 text-2xl mb-2 block">❖</span>
								<h4 class="font-medium text-slate-200">{skill}</h4>
							</div>
						))}
					</div>
				</Stagger>
			</div>
		</section>

		<!-- Projects -->
		<section id="projects" class="py-24">
			<div class="container mx-auto px-4 max-w-6xl">
				<Reveal client:visible>
					<h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Featured Projects</h2>
				</Reveal>
				<Stagger client:visible>
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
						{[1, 2, 3].map((item) => (
							<div class="glass-card overflow-hidden group">
								<div class="h-48 bg-gradient-to-br from-slate-800 to-slate-900 group-hover:scale-105 transition-transform duration-500"></div>
								<div class="p-6 relative">
									<h3 class="text-xl font-bold mb-2 group-hover:text-cyan-400 transition-colors">Project Name</h3>
									<p class="text-slate-400 text-sm mb-4">A brief description of the project and the technologies used.</p>
									<a href="#" class="text-sm font-medium text-white hover:underline decoration-blue-400 underline-offset-4">View Project →</a>
								</div>
							</div>
						))}
					</div>
				</Stagger>
			</div>
		</section>

		<!-- Connect / Footer -->
		<section id="connect" class="py-24 bg-slate-950 border-t border-white/5">
			<div class="container mx-auto px-4 text-center max-w-2xl">
				<Reveal client:visible>
					<h2 class="text-3xl md:text-4xl font-bold mb-6">Let's Connect</h2>
					<p class="text-slate-400 mb-8 text-lg">
						I'm always open to discussing new projects, creative ideas or opportunities to be part of your visions.
					</p>
					<div class="flex justify-center gap-6 mb-12">
						{['GitHub', 'LinkedIn', 'Twitter', 'Email'].map((social) => (
							<a href="#" class="px-6 py-3 glass-card hover:bg-white/10 transition-all hover:-translate-y-1">
								{social}
							</a>
						))}
					</div>
					<p class="text-slate-600 text-sm">
						© {new Date().getFullYear()} Drilon Recica. All rights reserved.
					</p>
				</Reveal>
			</div>
		</section>

	</main>
</Layout>
