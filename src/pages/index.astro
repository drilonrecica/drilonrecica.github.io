---
import Layout from '../layouts/Layout.astro';
import { Reveal } from '../components/motion/Reveal';
import { Stagger } from '../components/motion/Stagger';
---

<Layout title="Welcome to Astro">
	<main class="container mx-auto px-4 py-20 flex flex-col items-center justify-center min-h-[80vh]">
		<Reveal client:load direction="down">
			<div class="glass-card p-12 max-w-2xl w-full text-center glow-border relative overflow-hidden">
				<div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 to-cyan-400 opacity-50"></div>
				
				<h1 class="text-5xl mb-6">
					Welcome to <span class="gradient-accent">Astro</span>
				</h1>
				
				<p class="text-lg text-slate-300 mb-8 leading-relaxed">
					This is a minimal startup template initialized with <code class="font-mono bg-white/5 px-2 py-1 rounded text-sm text-cyan-300">Tailwind CSS v4</code> and a futuristic design system.
				</p>

				<Stagger client:visible>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left">
						<div class="glass-card p-6 border-white/5 bg-white/5 hover:bg-white/10 transition-colors">
							<h3 class="text-xl mb-2 flex items-center gap-2">
								<span class="text-2xl">‚ö°Ô∏è</span> Fast
							</h3>
							<p class="text-sm text-slate-400">Powered by Astro's island architecture for zero-JS by default.</p>
						</div>
						<div class="glass-card p-6 border-white/5 bg-white/5 hover:bg-white/10 transition-colors">
							<h3 class="text-xl mb-2 flex items-center gap-2">
								<span class="text-2xl">üé®</span> Beautiful
							</h3>
							<p class="text-sm text-slate-400">Styled with Tailwind CSS utilities and custom glassmorphism effects.</p>
						</div>
					</div>
				</Stagger>
			</div>
		</Reveal>
	</main>
</Layout>
